<h1>Create New Article</h1>

<% if @article.errors.any? %>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for @article do |f| %>
    <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
    </div>
    
    <br>
    
    <div>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
    </div>
    
    <%= f.submit %>
<% end %>